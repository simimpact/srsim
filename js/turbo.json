{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          ".next/**",
          "!.next/cache/**"
        ]
      },
      "lint": {
        "dependsOn": [
          "^lint"
        ]
      },
      "dev": {
        "cache": false,
        "persistent": true
      }
    }
  }
  